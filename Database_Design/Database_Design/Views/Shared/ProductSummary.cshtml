@model Product
<div class="d-flex justify-content-center">
    <img src="@Url.Content(@Model.ImageUrl)" alt="" class="img-thumbnail" />
</div>
<div class="d-flex justify-content-center">
    <h4><a href="/Product/Details/@Model.ProductId">@Model.ProductName</a></h4>
</div>
</div>
<div class="d-flex justify-content-center">
    <p>@Model.Description</p>
</div>
<div class="d-flex justify-content-center">
    <h4>Price: @Model.ProductPrice.ToString("c")</h4>
</div> 

<form id="@Model.ProductId" asp-action="AddToCart" asp-controller="Cart" method="post" class="d-flex justify-content-center">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <button type="submit" class="btn btn-info btn-sm float-right">Add To Cart</button>
</form>