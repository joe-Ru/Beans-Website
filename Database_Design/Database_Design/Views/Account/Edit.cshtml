@model Product

@{ ViewBag.Title = "Edit Product"; Layout = "_AccountLayout"; }

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />    
    <div class="form-group">         <label asp-for="ProductName"></label>  
    <input asp-for="ProductName" class="form-control" /> 
        </div>     <div class="form-group">   
    <label asp-for="Description"></label>   
    <textarea asp-for="Description" class="form-control"></textarea>   
                 </div>     <div class="form-group">         <label asp-for="CategoryId"></label>      
    <input asp-for="CategoryId" class="form-control" /> 
                          </div>     <div class="form-group">      
    <label asp-for="ProductPrice"></label>      
    <input asp-for="ProductPrice" class="form-control" />     </div>    
    <div class="text-center">
        

        <button class="btn btn-primary" type="submit">Save</button>         <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form>
