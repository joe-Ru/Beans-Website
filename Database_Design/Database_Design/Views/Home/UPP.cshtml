@model Database_Design.Models.UPP
<h4 style="color:purple">
</h4>

<h3><b>Please update your file.</b></h3>

@using (Html.BeginForm("Form2", "Home", FormMethod.Post))
{
    <table>
        <tr>
            <td>Upload Image:</td><!--how do?-->
            <td>@Html.TextBoxFor(m => m.ProductImage)</td>
        </tr>
        <tr>
            <td>Image Description: </td>
            <td>@Html.TextBoxFor(m => m.ImageDescription)</td>
        </tr>
        <tr>
            <td>Set A Price: </td>
            <td>@Html.TextBoxFor(m => m.Price)</td>
        </tr>
        <tr>
            <td>Product Name: </td>
            <td>@Html.TextBoxFor(m => m.ProductName)</td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Update Product" /></td>
        </tr>
        <!-- What should this button do? Upload to Database? -->
    </table>
}
