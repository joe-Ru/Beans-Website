@model Database_Design.Models.UPP
<h4 style="color:purple">
</h4>

<h3><b>Please edit your information below.</b></h3>
<form enctype="multipart/form-data" asp-controller="Home" asp-action="UploadFile" method="post">
    <div>
        <div class="form-group row">
            <div class="custom-file">
                <input asp-controller="UploadFile" name="ImageUrl" asp-for="ImageUrl" class="form-control custom-file-input">
                <label class="custom-file-label">Choose File...</label>
            </div>
        </div>
        <div class="form-group row">
            <input asp-controller="UploadFile" name="ProductName" class="form-control" placeholder="Product Name">
        </div>
        <div class="form-group row">
            <input asp-controller="UploadFile" name="ProductPrice" class="form-control" placeholder="Product Price">
        </div>
        <div class="form-group row">
            <input asp-controller="UploadFile" name="Description" class="form-control" placeholder="Product Description">
        </div>
        <div class="form-group row">
            <input asp-controller="UploadFile" name="CategoryId" class="form-control" placeholder="Category">
        </div>
    </div>
    <button type="submit">Submit</button>
</form>}