@model Database_Design.Models.UPP
<h4 style="color:purple">
</h4>

<h3><b>Please edit your information below.</b></h3>

@using (Html.BeginForm("Form2", "Home", FormMethod.Post))
{
    <!-- TODO: Review the below cosmetics, make it less squished together -->
    <table style="margin-left:auto;margin-right:auto;">
        <tr>
            <td>Upload Image: </td>
            <td>@Html.TextBoxFor(m => m.ImageUrl)</td>
        </tr>
        <tr>
            <td>Product Name: </td>
            <td>@Html.TextBoxFor(m => m.ProductName)</td>
        </tr>
        <tr>
            <td>Product Price: </td>
            <td>@Html.TextBoxFor(m => m.ProductPrice)</td>
        </tr>
        <tr>
            <td>Product Description: </td>
            <td>@Html.TextBoxFor(m => m.Description)</td>
        </tr>
        <tr>
            <td>Category: </td>
            <td>@Html.TextAreaFor(m => m.CategoryId)</td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Submit Form" /></td>
        </tr>
        <!-- What should this button do? Email one of us? or automate it? -->
    </table>
}